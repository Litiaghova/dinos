<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialogfon"
    android:background="@drawable/dialog"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"

    >
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnClose"
        android:text="&#60;"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/style_btn_stroke_black95"
        android:layout_gravity="start"
        ></TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/previewimg"
        android:background="@drawable/dialog2"
        android:layout_weight="60"
        android:layout_marginTop="10dp"

        ></ImageView>

        <TextView

            android:layout_weight="30"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/text1"
            android:text="@string/dialogtext1"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginTop="10dp"

            android:textColor="@color/black95"
            ></TextView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btndialogcontinue"
        android:background="@drawable/style_btn_stroke_black95"
        android:layout_weight="10"
        android:text="@string/btndialogcontinue"
        android:padding="10dp"
        android:textColor="@color/black95"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        ></Button>
</LinearLayout>
</LinearLayout>